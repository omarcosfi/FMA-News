    <script>
        function formatDate(date) {
            const months = [
                "Janeiro", "Fevereiro", "Março", "Abril", "Maio", "Junho",
                "Julho", "Agosto", "Setembro", "Outubro", "Novembro", "Dezembro"
            ];
            const day = date.getDate();
            const month = months[date.getMonth()];
            const year = date.getFullYear();
            return `Publicado em ${day} de ${month} de ${year}`;
        }

        function setPostDate() {
            const postTimeElement = document.getElementById('post-time');
            const postDate = new Date();  // Defina a data de publicação aqui
            postTimeElement.textContent = formatDate(postDate);
        }

        setPostDate();
    </script>
